;;; summary: IEC send secondary address after listen
;;; parameters:
;;;   @A_SA: byte Secondary address
;;; return:
;;;   P.C: CC=OK / CS=FAIL
;;;   X: Error code on fail
.proc iec_listen_second
    __begin_cedecl_frame
        A_SA = < -1
        ;
        lda_p A_SA
        sta SELF_BSOUR                                      ;buffer character
        jsr isoura                                          ;send it
        ;
        ;release attention after listen
        ;
        jsr scatn
        ;
        ;TODO clc needed?
    __end_cedecl_frame
    rts
.endproc
