;;; summary: Load PRG file
;;; parameters:
;;;   A_PA
;;;   A_FILENAME
;;;   A_ADDRESS
;;; return:
;;;   P.C: 0=CC=OK / 1=CS=FAIL
;;;   A: error code on FAIL
;;; changed: A, AX, BL
.proc load_prg_at
    __begin_cedecl_frame
        A_PA = < -1
        A_FILENAME = < -3
        A_ADDRESS = < -5
        ;
        try
            ;RESTORE_FP
            ;ldbxp A_ADDRESS
            lda_p A_PA
            ;BEGIN_PUSH
            php_a
            END_PUSH
            jsr iec_listen                                  ;A+ Y+
            if_cs_then
                jmp _catch
            else_end
            ;
            ;BEGIN_PUSH
            php_vb DEVICE_DISK_CHANNEL_LOAD | SERIAL_COMMAND_SA_OPEN
            ;lda # DEVICE_DISK_CHANNEL_LOAD | SERIAL_COMMAND_SA_OPEN
            END_PUSH
            jsr iec_listen_second                           ;A+ Y+
            bcs _catch
            ;
            ; Send file name
            from
                ;RESTORE_FP
                ;ldcxp A_FILENAME
                ;ldy # 0
            loop
                ;RESTORE_FP
                lda [A_FILENAME, X]
                beq _end
                php_a
                END_PUSH
                jsr iec_byte_out                            ;A+ Y+
            next
                incpw A_FILENAME
                bne _loop                                   ;bra
            end
            ;
            jsr iec_unlisten                                ;A+ Y+
            ;
            ;lda ZPKERNAL_FA
            ;RESTORE_FP
            lda_p A_PA
            ; A=8
            php_a
            END_PUSH
            jsr iec_talk                                    ;A+ Y+ Establish channel
            bcs _catch
            ;
            php_vb (DEVICE_DISK_CHANNEL_LOAD | SERIAL_COMMAND_SA_SECOND)  ; sa
            END_PUSH
            jsr iec_talk_second                             ;A+ Y+ Tell it to load
            bcs _catch
            ;
            ; Skip load address (2 bytes)
            jsr iec_byte_in                                 ;A+ Y+ AL+ AH+
            lda AH
            bne _catch
            jsr iec_byte_in                                 ;A+ Y+ AL+ AH+
            lda AH
            bne _catch
            ;
            from
                RESTORE_FP
            loop
                jsr iec_byte_in                             ;A+ Y+ AL+ AH+
                lda AH
                and # (KERNAL_IO_ERROR_READ_TIMEOUT | KERNAL_IO_ERROR_DEVICE_NOT_PRESENT)
                bne _catch
                lda AL
                sta [A_ADDRESS, X]
                lda AH
                and # KERNAL_IO_EOI
                bne _end                                    ; break because EOI
            next
                incpw A_ADDRESS
                bne _loop                                   ; bra because: we should never load wraping $FFFF to $0000
            end
            ;
            ;jsr KERNAL_UNTLK ; Close channel not needed on EOI says https://www.pagetable.com/?p=1031
            ;
            ; Close file
            ;RESTORE_FP
            lda_p A_PA
            php_a
            END_PUSH
            jsr iec_listen                                  ;A+ Y+
            ;
            php_vb (DEVICE_DISK_CHANNEL_LOAD | SERIAL_COMMAND_SA_CLOSE)
            END_PUSH
            jsr iec_listen_second                           ;A+ Y+
            jsr iec_unlisten                                ;A+ Y+
            ;
            clc                                             ;OK
            bcc _finally
        catch
            sec
        finally_end
    __end_cedecl_frame
    rts
.endproc
